@using Concessionaria.Web.Models
@model DadosCarro

@{
    ViewBag.Title = "Index";
}

<h2>Cadastro Carros</h2>

@using (Html.BeginForm("Index", "Carro", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(c => c.NomeCarro, "Nome do Carro")
        @Html.EditorFor(c => c.NomeCarro, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.NomeCarro)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Marca, "Marca do Carro")
        @Html.TextBoxFor(c => c.Marca, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Cor, "Cor do Carro")
        @Html.TextBoxFor(c => c.Cor, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Ano, "Ano do Carro")
        @Html.TextBoxFor(c => c.Ano, new { @class = "form-control", @type = "number" })
    </div>
    <input type="submit" class="btn btn-primary" value="Enviar" />
}

